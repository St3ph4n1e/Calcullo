<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nb1Text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/peach"
    tools:context=".PlayActivity">

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="339dp"
        android:layout_height="172dp"
        android:background="#5EFFEB3B"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="src_in"
        android:fontFamily="@font/bungee_inline"
        android:gravity="center"
        android:text="Quelle est la rÃ©ponse ?"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <Button
        android:id="@+id/answerButton1"
        android:layout_width="160dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/blueButton"
        android:fontFamily="@font/bungee_inline"
        android:text="Answer 1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/questionTextView"
        app:layout_constraintStart_toStartOf="@+id/questionTextView"
        app:layout_constraintTop_toBottomOf="@+id/questionTextView"
        app:layout_constraintVertical_bias="0.064" />

    <Button
        android:id="@+id/answerButton2"
        android:layout_width="160dp"
        android:layout_height="61dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/blueButton"
        android:fontFamily="@font/bungee_inline"
        android:text="Answer 2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/answerButton1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/answerButton1"
        app:layout_constraintTop_toBottomOf="@+id/answerButton1" />

    <Button
        android:id="@+id/answerButton3"
        android:layout_width="160dp"
        android:layout_height="61dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/blueButton"
        android:fontFamily="@font/bungee_inline"
        android:text="Answer 3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/answerButton2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/answerButton2"
        app:layout_constraintTop_toBottomOf="@+id/answerButton2" />

    <Button
        android:id="@+id/answerButton4"
        android:layout_width="160dp"
        android:layout_height="61dp"
        android:backgroundTint="@color/blueButton"
        android:fontFamily="@font/bungee_inline"
        android:text="Answer 4"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/answerButton3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/answerButton3"
        app:layout_constraintTop_toBottomOf="@+id/answerButton3"
        app:layout_constraintVertical_bias="0.064" />

    <ImageButton
        android:id="@+id/LeftImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#81FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/left" />

    <ImageButton
        android:id="@+id/RightImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#79FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/right" />

</androidx.constraintlayout.widget.ConstraintLayout>